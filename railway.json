{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "nixpacks": {
    "startCmd": "npm start",
    "buildCmd": "echo 'Build phase completed - using pre-built files' && exit 0"
  },
  "domains": {
    "custom": {
      "ssl": true,
      "forceHttps": true
    }
  }
}
