{
  "build": {
    "builder": "nixpacks",
    "dockerfilePath": null
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "nixpacks": {
    "startCmd": "npm start",
    "buildCmd": "echo 'Build phase disabled - using pre-built files' && exit 0",
    "phases": {
      "setup": {
        "cmds": ["npm install"]
      },
      "build": {
        "cmds": ["echo 'Build phase skipped'"]
      },
      "start": {
        "cmds": ["npm start"]
      }
    }
  }
}
